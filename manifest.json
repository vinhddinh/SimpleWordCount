{
    "manifest_version": 2,
    "name": "Word Counter",
    "version": "1.0",
    "description": "Counts the number of words in the selected text and displays it in a badge.",
    "browser_action": {
      "default_icon": "icon48.png",
      "default_popup": "popup.html"
    },
    "permissions": ["tabs", "<all_urls>"],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "icons": {
      "48": "icon48.png"
    }
  }
  