{
    "manifest_version": 2,
    "name": "Simple Word Count",
    "version": "1.0",
    "description": "Counts the number of words in the selected text and displays it in a badge.",
    "browser_action": {
      "default_icon": "icon48.png"
    },
    "permissions": ["tabs", "<all_urls>"],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  